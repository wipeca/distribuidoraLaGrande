@model LaGrandeSAS.Usuario

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Actualice sus datos!</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="input-field col s3">

                @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "validate" } })
                @Html.Label("Nombres:")
                @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })

            </div>

            <div class="input-field col s3">
                @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "validate" } })
                @Html.Label("Apellios:")
                @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })

            </div>

            <div class="input-field col s3">
                @Html.EditorFor(model => model.Barrio, new { htmlAttributes = new { @class = "validate" } })
                @Html.Label("Barrio donde vive:")
                @Html.ValidationMessageFor(model => model.Barrio, "", new { @class = "text-danger" })

            </div>

            @*<div class="input-field col s3">
                    @Html.EditorFor(model => model.FechaCreacion, new { htmlAttributes = new { @class = "validate" } })
                @Html.Label("Fecha de creacion:")
                    @Html.ValidationMessageFor(model => model.FechaCreacion, "", new { @class = "text-danger" })
            </div>*@

        </div>
        <div class="row">

            <div class="input-field col s3">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "validate" } })
                @Html.Label("Correo electrónico:")
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })

            </div>

            <div class="input-field col s3">

                @Html.EditorFor(model => model.usuario1, new { htmlAttributes = new { @class = "validate" } })
                @Html.Label("usuario para acceder:")
                @Html.ValidationMessageFor(model => model.usuario1, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="row">
            <div class="input-field col s3">
                @Html.PasswordFor(model => model.contraseña, new { htmlAttributes = new { @class = "validate" } })
                @Html.Label("Contraseña:")
                @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })

            </div>

            <div class="input-field col s3">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

