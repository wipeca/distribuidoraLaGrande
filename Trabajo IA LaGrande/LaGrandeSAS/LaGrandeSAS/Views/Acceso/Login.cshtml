@model LaGrandeSAS.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Acceso de Usuarios</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.Label("",Convert.ToString((string)ViewBag.Error))
    <div class="row" style="margin-left: 200px; border:1px solid gray; border-radius: 5px; width:400px"> 
        <div class="input-field col s6">          
            @Html.EditorFor(model => model.usuario1, new { htmlAttributes = new { @class = "validate", @required = "required" } })
            @Html.Label("Usuario")
            @Html.ValidationMessageFor(model => model.usuario1, "", new { @class = "text-danger" })
            
        </div>
        <div class="input-field col s6">
                @Html.PasswordFor(model => model.contraseña, new { htmlAttributes = new { @class = "validate", @required = "required" } })
            @Html.Label("Contraseña")
                @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
            
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ingresar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Registrarme!", "Create", "Acceso")
</div>
