@model IEnumerable<LaGrandeSAS.Inventarios>

@{
    ViewBag.Title = "Productos en el inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6>Productos en Inventario</h6>

<p>
    @Html.ActionLink("Agregar Producto", "Create", new { @class="btn btn-default"})
</p>
<table class="table table-hover responsive-table">
    <tr>
        <th>
            @Html.DisplayName("Codigo")
        </th>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Valor unidad")
        </th>
        <th>
            @Html.DisplayName("Unidades")
        </th>
        <th>
            @Html.DisplayName("Total")
        </th>
        <th>
            @Html.DisplayName("Valor con Descuento")
        </th>
        <th>
            @Html.DisplayName("Imagen")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoBarras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.unidades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUndDescuento)
            </td>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(item.ImagenProducto)" width="80" height="80" />
                @*@Html.DisplayFor(modelItem => item.ImagenProducto)*@
            </td>
            <td>               
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-plus" }) |               
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-minus" })
            </td>
        </tr>
    }

</table>
